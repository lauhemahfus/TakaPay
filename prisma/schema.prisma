generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  phone     String     @unique
  password  String
  status    UserStatus @default(ACTIVE)
  wallet    Wallet? 

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Wallet {
  id                   Int           @id @default(autoincrement())
  userId               Int           @unique
  balance              Decimal       @default(0) @db.Decimal(18, 3)
  status               WalletStatus  @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  sentP2PTransactions     P2PTransaction[] @relation("SentP2PTransactions")
  receivedP2PTransactions P2PTransaction[] @relation("ReceivedP2PTransactions")
  cashTransactions        CashTransaction[]
}

model P2PTransaction {
  id            Int               @id @default(autoincrement())
  senderWalletId   Int
  receiverWalletId Int
  amount        Decimal           @db.Decimal(18, 3)
  status        TransactionStatus @default(COMPLETED)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  senderWallet   Wallet @relation("SentP2PTransactions", fields: [senderWalletId], references: [id])
  receiverWallet Wallet @relation("ReceivedP2PTransactions", fields: [receiverWalletId], references: [id])
}

model CashTransaction {
  id        Int      @id @default(autoincrement())
  walletId  Int
  amount    Decimal  @db.Decimal(18, 3)
  type      CashTransactionType 
  status    TransactionStatus @default(COMPLETED)
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet Wallet @relation(fields: [walletId], references: [id])
}


enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum WalletStatus {
  ACTIVE
  FROZEN
  CLOSED
  PAUSED
}

enum CashTransactionType {
  CASH_IN
  CASH_OUT
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
}
